{
  "name": "hahow-homework",
  "version": "1.0.0",
  "description": "本專案為 Hahow Backend Engineer 徵才測驗，使用 Node.js + TypeScript 實作 API server，串接 Hahow 提供的上游 API，依驗證狀態回傳不同的資料內容。",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "npm run build && node dist/server.js",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/22495521/hahow-homework.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/22495521/hahow-homework/issues"
  },
  "homepage": "https://github.com/22495521/hahow-homework#readme",
  "devDependencies": {
    "@types/helmet": "^0.0.48",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@types/node": "^24.2.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jest": "^30.0.5",
    "joi": "^18.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
